@using System.Data.Entity.Core.Objects
@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "New";
}

<h2>New Movie</h2>

@using (Html.BeginForm("Save","Movies"))
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(e=>e.Movie.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(e=>e.Movie.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Movie.ReleaseDate)

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre)
        @Html.DropDownListFor(m => m.Movie.Genre, new SelectList(Model.Genres, "Id", "Name"), "Select Genre Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Movie.Genre
            )

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.NumberInStock)
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Movie.NumberInStock)

    </div>
    
    <button class="btn btn-primary">Add</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
